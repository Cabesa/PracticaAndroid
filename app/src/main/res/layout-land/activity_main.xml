<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aleja.login.MainActivity">

    <RelativeLayout
        android:layout_width="576dp"
        android:layout_height="295dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/lblUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/user"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="267dp"
            android:layout_above="@+id/txtUsuario"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="196dp"
            android:layout_height="241dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/usuario"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/lblContraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="0dp"
            android:text="@string/pass"
            tools:layout_editor_absoluteX="337dp"
            tools:layout_editor_absoluteY="87dp"
            android:layout_above="@+id/txtPass"
            android:layout_alignLeft="@+id/txtUsuario"
            android:layout_alignStart="@+id/txtUsuario" />

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPass"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/lblContraseña"
            android:layout_toRightOf="@+id/lblContraseña"
            android:layout_weight="1"
            android:onClick="pulsarBoton"
            android:text="@string/btnEntrar"
            tools:layout_editor_absoluteX="409dp"
            tools:layout_editor_absoluteY="151dp" />

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="337dp"
            tools:layout_editor_absoluteY="104dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/lblContraseña"
            android:layout_alignStart="@+id/lblContraseña" />

        <TextView
            android:id="@+id/lblFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="442dp"
            tools:layout_editor_absoluteY="212dp"
            android:layout_below="@+id/btnEntrar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/txtPass"
            android:layout_alignStart="@+id/txtPass" />

        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="333dp"
            tools:layout_editor_absoluteY="37dp"
            android:layout_above="@+id/lblContraseña"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/lblUsuario"
            android:layout_alignStart="@+id/lblUsuario" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
